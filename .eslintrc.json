{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react-hooks/recommended",
    "plugin:react/recommended",
    "plugin:sonarjs/recommended",
    "plugin:unicorn/recommended",
    "plugin:@next/next/recommended",
    "plugin:storybook/recommended",
    "plugin:tailwindcss/recommended",
    "plugin:prettier/recommended"
  ],
  "ignorePatterns": ["!.storybook"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "react", "unicorn", "etc", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "react/react-in-jsx-scope": "off",
    "react/jsx-uses-react": "off",
    "eqeqeq": ["error", "smart"],
    "@typescript-eslint/ban-types": "off",
    "@typescript-eslint/no-explicit-any": "error",
    "unicorn/no-await-expression-member": "off",
    "unicorn/no-null": "off",
    "unicorn/prefer-ternary": "off",
    "unicorn/filename-case": "off",
    "sonarjs/no-duplicate-string": "off",
    "sonarjs/no-nested-template-literals": "off",
    "tailwindcss/no-custom-classname": "off",
    "unicorn/no-array-for-each": "warn"
  },
  "overrides": [
    {
      "files": ["src/**/*"],
      "rules": {
        "no-process-env": "error",
        "max-params": ["error", 4],
        "max-depth": ["error", 3],
        "react/jsx-curly-brace-presence": [
          "error",
          {
            "props": "never",
            "children": "never",
            "propElementValues": "always"
          }
        ],

        "unicorn/explicit-length-check": "error",
        "unicorn/prefer-object-from-entries": "error",
        "unicorn/prefer-set-has": "error",
        "unicorn/no-useless-spread": "error",
        "react/jsx-no-useless-fragment": "error",
        "@typescript-eslint/no-unused-vars": [
          "error",
          { "ignoreRestSiblings": true }
        ],
        "unicorn/filename-case": [
          "error",
          {
            "case": "kebabCase"
          }
        ]
      }
    },
    {
      "files": ["src/**/*.pure-component.tsx"],
      "rules": {
        // pure-components enjoys a much more stringent standard for now.
        // eventually, i would like to add the following react plugin and rule for state:
        // 'react/no-set-state': 2,
        // but not yet.
        "no-restricted-imports": [
          "error",
          {
            "patterns": [
              {
                "group": ["react"],
                "importNames": [
                  "useContext",
                  "useState",
                  "useReducer",
                  "useEffect"
                ],
                "message": "Usage of useContext, useState, useReducer, etc inside of `pure-components` is not allowed."
              },
              {
                "group": ["lib"],
                "message": "Usage of Agility libraries is not allowed in pure components"
              }
            ]
          }
        ],
        "max-statements": ["error", 14],
        "etc/no-commented-out-code": "error",
        "react-hooks/exhaustive-deps": "error",
        "max-lines": [
          "error",
          {
            "max": 300,
            "skipBlankLines": true,
            "skipComments": true
          }
        ]
      }
    },
    {
      "files": [
        "src/**/*.stories.tsx",
        "src/**/*.stories-mocks.*",
        "src/**/*.spec.ts"
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "max-lines": "off",
        "max-statements": "off",
        "sonarjs/no-duplicate-string": "off"
      }
    }
  ]
}
